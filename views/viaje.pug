extends ./layout/index

block contenido
    main.container.mt-5 
        .row
            .col-md-5
                img.img-fluid(src=`/img/destinos_${detallesViaje.imagen}_ln.jpg`, alt=`Imagen de ${detallesViaje.titulo}`)
            .col-md-7
                h1= detallesViaje.titulo
                p
                    svg.icon.icon-tabler.icons-tabler-outline.icon-tabler-calendar-week(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        path(d='M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z')
                        path(d='M16 3v4')
                        path(d='M8 3v4')
                        path(d='M4 11h16')
                        path(d='M7 14h.013')
                        path(d='M10.01 14h.005')
                        path(d='M13.01 14h.005')
                        path(d='M16.015 14h.005')
                        path(d='M13.015 17h.005')
                        path(d='M7.01 17h.005')
                        path(d='M10.01 17h.005')
                    |   #{detallesViaje.fecha_ida} -  #{detallesViaje.fecha_vuelta}
                p
                    svg.icon.icon-tabler.icons-tabler-outline.icon-tabler-currency-dollar(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        path(d='M16.7 8a3 3 0 0 0 -2.7 -2h-4a3 3 0 0 0 0 6h4a3 3 0 0 1 0 6h-4a3 3 0 0 1 -2.7 -2')
                        path(d='M12 3v3m0 12v3')
                    |   #{detallesViaje.precio} dolares por persona

                p
                    svg.icon.icon-tabler.icons-tabler-outline.icon-tabler-user(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        path(d='M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0')
                        path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                    | #{detallesViaje.disponibles} Disponibles
                p.text-justify #{detallesViaje.descripcion}
